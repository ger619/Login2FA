
  <%= form_tag(enable_otp_verify_path, method: :post) do %>
<section class="bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Scan QR Code to Enable Authentication
        </h1>
        <form class="space-y-4 md:space-y-6" action="#">
          <div  class="ml-2">
            <%= raw RQRCode::QRCode.new(@provisioning_uri, :svg, :level => :l, :unit => 2).as_svg(color: "000",
                                                                                                  shape_rendering: "crispEdges",
                                                                                                  module_size: 9,
                                                                                                  use_path: true,) %>
          </div>

            <div>
              <label>Enter OTP Code</label>
              <%= text_field_tag(:otp_attempt)%>
            </div>

          <%= submit_tag "Verify and Enable", class: "w-full bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center border border-[#000]" %>
        </form>
      </div>
    </div>
    <%= link_to "Back", :back, class: "border border-[#000] text-center capitalize  p-2 rounded hover:bg-[#000] hover:text-white" %>

  </div>
</section>
  <% end %>
